extends layout

block content
    .w3-card-4
        header.w3-container.w3-teal
            h1 #{book.title}
            a.w3-btn.w3-grey(href="/", style="margin-left: 40px;") Return

        div.w3-container
            img(src=book.coverImg, alt=`Cover Image of ${book.title}`, style="max-width: 200px; float: right; margin-left: 20px; margin-bottom: 20px;")

            ul.w3-ul.w3-card-4(style="width: 70%; list-style-type: none; padding: 0;")

                li(style="margin-bottom: 10px;")
                    b Id:
                    span #{book._id}

                li(style="margin-bottom: 10px;")
                    b Series:
                    span #{book.series}

                li(style="margin-bottom: 10px;")
                    b Author:
                    span #{book.author}

                li(style="margin-bottom: 10px;")
                    b Rating:
                    span #{book.rating}

                li(style="margin-bottom: 10px;")
                    b Description:
                    p #{book.description}

                li(style="margin-bottom: 10px;")
                    b Language:
                    span #{book.language}

                li(style="margin-bottom: 10px;")
                    b ISBN:
                    span #{book.isbn}

                li(style="margin-bottom: 10px;")
                    b Genres:
                    ul(style="padding-left: 20px; list-style-type: none;")
                        each genre in book.genres
                            li #{genre}

                li(style="margin-bottom: 10px;")
                    b Characters:
                    ul(style="padding-left: 20px; list-style-type: none;")
                        each character in book.characters
                            li #{character}

                li(style="margin-bottom: 10px;")
                    b Book Format:
                    span #{book.bookFormat}

                li(style="margin-bottom: 10px;")
                    b Edition:
                    span #{book.edition}

                li(style="margin-bottom: 10px;")
                    b Pages:
                    span #{book.pages}

                li(style="margin-bottom: 10px;")
                    b Publisher:
                    span #{book.publisher}

                li(style="margin-bottom: 10px;")
                    b Publish Date:
                    span #{book.publishDate}

                li(style="margin-bottom: 10px;")
                    b First Publish Date:
                    span #{book.firstPublishDate}

                li(style="margin-bottom: 10px;")
                    b Awards:
                    ul(style="padding-left: 20px; list-style-type: none;")
                        each award in book.awards
                            li #{award}

                li(style="margin-bottom: 10px;")
                    b Number of Ratings:
                    span #{book.numRatings}

                li(style="margin-bottom: 10px;")
                    b Ratings by Stars:
                    ul(style="padding-left: 20px; list-style-type: none;")
                        each rating in book.ratingsByStars
                            li #{rating}

                li(style="margin-bottom: 10px;")
                    b Liked Percent:
                    span #{book.likedPercent}%

                li(style="margin-bottom: 10px;")
                    b Setting:
                    ul(style="padding-left: 20px; list-style-type: none;")
                        each setting in book.setting
                            li #{setting}

                li(style="margin-bottom: 10px;")
                    b Score:
                    span #{book.bbeScore}

                li(style="margin-bottom: 10px;")
                    b Votes:
                    span #{book.bbeVotes}

                li(style="margin-bottom: 10px;")
                    b Price:
                    span #{book.price}

            footer.w3-container.w3-teal
                address
                    span Generated by Daniel Cracel