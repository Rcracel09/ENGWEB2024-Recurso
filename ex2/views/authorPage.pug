extends layout

block content

    .w3-card-4

        header.w3-container.w3-teal(style="margin-bottom: 40px; display: flex; ")
            h1 
                span Página do Author #{nome}
            a.w3-btn.w3-grey(href="/", style="margin-left: 40px;") Return 

        div.w3-container
            h2 Informação do Author
            h3 Nome: #{nome}
            h3 ID: #{id}
            h3 Total de livros: #{soma}
            
        div.w3-container
            table.w3-table-all
                thead
                    tr
                        th Id
                        th Title
                        th Authors
                        th Publish Date
                        th Pages
    
                tbody
                    each book in blist
                        tr
                            td
                                a(href=`/${book._id}`)= book._id
                            td= book.title
                            td
                                each author in book["author"]
                                    a(href=`/authors/${author["_id"]}`)= author["name"]
                            td= book.publishDate
                            td= book.pages      

        footer.w3-container.w3-teal
            h5
                span Generated by Daniel Cracel 

    